<div data-js="moodboard" class="moodboard moodboard--maximize">

	<div class="moodboard__header">
		<a class="moodboard__logo-link" href="/">
			<img class="moodboard__logo" src="./images/maetland-logo.svg" alt="">
		</a>
		<div class="moodboard__caption title">
			Scroll en ontdek
		</div>
		<a href="/" class="moodboard__back title">
			Terug
		</a>
	</div>

	<div class="moodboard__info">
		<ul class="moodboard__info-list">
			{% spaceless %}
				{% for page in pages %}
					<li class="moodboard__info-item title {% if loop.first %}show{% endif %}">
						<a class="moodboard__info-link" href="#{{page.attributes.id}}">{{page.attributes.title}}</a>
					</li>
				{% endfor %}
			{% endspaceless %}
		</ul>
	</div>
	
	<ul class="moodboard__list">
		
		{% for page in pages %}
			{% if page.attributes.id == 'contact' %}
				<li class="moodboard__item" style="background-image:url('{{page.attributes.images|first}}')" data-id="{{page.attributes.id}}">
					{# {% include "components/_contact.twig" with {} %} #}
				</li>
			{% else %}	
				<li class="moodboard__item" style="background-image:url('{{page.attributes.images|first}}')" data-id="{{page.attributes.id}}">
				</li>
			{% endif %}

		{% endfor %}

	</ul>

	<a href="#content" data-js="scroll-trigger" class="moodboard__scroll">
		{% include 'components/_scribble-right.twig' %}
	</a>

</div>