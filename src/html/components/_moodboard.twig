<div data-js="moodboard" class="moodboard">

	<div class="moodboard__header">
	</div>

	<div class="moodboard__info">
		<ul class="moodboard__info-list">
			{% spaceless %}
				{% for page in pages %}
					<li class="moodboard__info-item">
						{{page.attributes.title}}
					</li>
				{% endfor %}
			{% endspaceless %}
		</ul>
	</div>
	
	<ul class="moodboard__list">
		
		{% for page in pages %}
			<li class="moodboard__item" style="background:{{page.attributes.background}}">
			</li>
		{% endfor %}

	</ul>

</div>