{% set navItems = [] %}

{% for page in pages %}
    {% set navItems = navItems|merge([page]) %}
{% endfor %}

<style>
    .js .footer__nav-item{
        display: none;
    } 

    {% for page in navItems %}
        .js .page[data-page="{{page.attributes.id}}"] .footer__nav-item[data-id="{{page.attributes.id}}"]{
            display: block;
        }
    {% endfor %}
</style>

<ul class="footer__nav" data-js="footer-nav">
    
    {% set nextPage = navItems[1] %}

    {% for page in navItems %}

        {% if nextPage is empty %}
{#             {% set nextPageTitle = 'Inschrijven' %}
            {% set nextPageUrl = 'contact' %} #}
            {% set nextPageTitle = nextPage[0].attributes.title %}
            {% set nextPageId = nextPage[0].attributes.id %}
        {% else %}
            {% set nextPageTitle = nextPage.attributes.title %}
            {% set nextPageId = nextPage.attributes.id %}
        {% endif %}

        <li class="footer__nav-item" data-id={{page.attributes.id}}>
            <span class="footer__nav-label title">Volgende Pagina</span>
            <span class="footer__nav-divider">|</span>
            <a href="#{{nextPageId}}" class="footer__nav-link title">{{nextPageTitle}}</a>
        </li>

        {% set nextPage = navItems[loop.index + 1] %} 

    {% endfor %}
    
</ul>